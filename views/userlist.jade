                header.navbar.navbar-fixed-top.navbar-inverse
    .navbar-inner
        .container
            nav
                ul.nav.navbar-nav.navbar-right
                    li.dropdown
                        a.dropdown-toggle(href='#', data-toggle='dropdown')
                            | Add User
                            strong.class(caret='caret')
                        .dropdown-menu(style='padding: 15px; padding-bottom: 0px;')
                            form#formAddUser(action='/adduser', method='post', accept-charset='UTF-8')
                                | User Name
                                input#inputUserName(style='margin-bottom: 15px;', type='text', name='username', size='30')
                                | Email
                                input#inputUserEmail(style='margin-bottom: 15px;', type='email', name='useremail', size='30')
                                | Password
                                input#inputUserPassword(style='margin-bottom: 15px;', type='password', name='userpassword', size='30')
                                input#userAdmin(style='float: left; margin-right: 10px;', type='checkbox', name='useradmin', value='1')
                                label.string.optional(for='userAdmin')  Admin?
                                input.btn.btn-primary(style='clear: left; width: 100%; height: 32px; font-size: 13px; margin-bottom: 10px;', type='submit', name='commit', value='Add User')

                ul.nav.navbar-nav.navbar-right
                    li.dropdown
                        a.dropdown-toggle(href='#', data-toggle='dropdown')
                            | Delete User
                            strong.class(caret='caret')
                        .dropdown-menu(style='padding: 15px; padding-bottom: 10px;')
                            form#formAddUser(action='/removeuser', method='post', accept-charset='UTF-8')
                                | User Name
                                input#inputUserName(style='margin-bottom: 15px;', type='text', name='username', size='30')
                                input.btn.btn-primary(style='clear: left; width: 100%; height: 32px; font-size: 13px;', type='submit', name='commit', value='Delete User')


                .navbar.navbar-default.navbar-fixed-top(role='navigation')
                    .container
                        .navbar-header
                            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                                span.sr-only Toggle navigation
                                span.icon-bar
                                span.icon-bar
                                span.icon-bar
                            a.navbar-brand(href='/greetingadmin') Coding House
                        ul.nav.navbar-nav.navbar-right
                            li
                                a(href='/userlist') Account Management
                            li.dropdown.one
                                a.dropdown-toggle.index.one(data-toggle='dropdown', style="cursor:pointer")
                                    | Assignments
                                    span.caret
                                ul.dropdown-menu.index.one(role='menu')
                                    li
                                        a(href='/ph1sp1admin') Phase 1
                                    li
                                        a(href='/ph2sp1admin') Phase 2
                            li.dropdown.two
                                a.dropdown-toggle.index.two(data-toggle='dropdown', style="cursor:pointer")
                                    | Restaurants
                                    span.caret
                                ul.dropdown-menu.index.two(role='menu')
                                    li
                                        a(href='/neworder') New Order
                                    li
                                        a(href='/orderhistory') Order History
                                    li
                                        a(href='/newrestaurant') Add New Restaurant
